<div class="item-container col-sm-6 col-md-4">
    <div class="thumbnail">
        <a href="#/details/{{id}}"><img src="{{img}}" alt="{{title}}"></a>
        <div class="caption">
            <h3>{{title}}</h3>
            <div class="description">{{description}}</div>
            <div class="row">
                <div col-sm-12 col-md-8>
                    <a href="#" class="button btn btn-default btn-wish-list-remove" data-product-id="{{id}}" role="button">
                        <span class="glyphicon glyphicon-heart"  aria-hidden="true"></span>
                        Remove From Wish List
                    </a>
                </div>
                <div col-sm-12 col-md-4>
                    <a href="#/details/{{id}}" class="button btn btn-default btn-more" role="button">
                        Read More
                        <span class="glyphicon glyphicon-chevron-right"  aria-hidden="true"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>