<div class="container">
    <div class="row ">
        <div class="thumbnail">
            <a class="col-sm-5 col-md-5"><img class="details" src="{{product.img}}" alt="{{product.title}}"></a>
            <div class="caption col-sm-7 col-md-7">
                <h3 class="content-title">{{product.title}}</h3>
                <div class="content">{{product.content}}</div>
                <p>
                    <a href="#" class="button btn btn-default btn-wish-list" data-product-id="{{product.id}}" role="button">
                        <span class="glyphicon glyphicon-heart"  aria-hidden="true"></span>
                        Add To Wish List
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>